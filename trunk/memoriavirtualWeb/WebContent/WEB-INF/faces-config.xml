<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<managed-bean>
		<managed-bean-name>realizarLoginMB</managed-bean-name>
		<managed-bean-class>br.usp.memoriavirtual.controle.RealizarLoginMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>cadastrarInstituicaoMB</managed-bean-name>
		<managed-bean-class>br.usp.memoriavirtual.controle.CadastrarInstituicaoMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>realizarLogoffMB</managed-bean-name>
		<managed-bean-class>br.usp.memoriavirtual.controle.RealizarLogoffMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>enviarConviteMB</managed-bean-name>
		<managed-bean-class>br.usp.memoriavirtual.controle.EnviarConviteMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>cadastrarUsuarioMB</managed-bean-name>
		<managed-bean-class>br.usp.memoriavirtual.controle.CadastrarUsuarioMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>validacao</property-name>
			<value>#{param.validacao}</value>
		</managed-property>
		<managed-property>
			<property-name>email</property-name>
			<value>#{param.email}</value>
		</managed-property>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>editarInstituicaoMB</managed-bean-name>
		<managed-bean-class>br.usp.memoriavirtual.controle.EitarInstituicaoMB</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>



	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/restrito/index.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-outcome>falha</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>convite</display-name>
		<from-view-id>/restrito/enviarconvite.jsp</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/restrito/conviteenviado.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>logoff</display-name>
		<from-view-id>/restrito/*</from-view-id>
		<navigation-case>
			<from-outcome>logout</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>cadastrousuario</display-name>
		<from-view-id>/restrito/cadastrarusuario.jsp</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/cadastroconcluido.jsp</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<display-name>cadastrarinstituicao</display-name>
		<from-view-id>/restrito/cadastrarinstituicao.jsp</from-view-id>
		<navigation-case>
			<from-outcome>sucesso</from-outcome>
			<to-view-id>/restrito/instituicaocadastrada.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>falha</from-outcome>
			<to-view-id>/restrito/mv.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>


	<application>
		<resource-bundle>
			<base-name>br.usp.memoriavirtual.mensagens</base-name>
			<var>mensagens</var>
		</resource-bundle>

	</application>
</faces-config>
