<?xml version="1.0" encoding="UTF-8"?>
<!-- The web.xml, also known as the deployment descriptor, defines a Java Servlet web application.
		 This document is a mandatory element of any web application and must reside within WEB-INF.  The
		 deployment descriptor defines all the servlets and servlet filters that belong to this web
		 application. -->
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <javaee:display-name>Memoria Virtual Cataloguing</javaee:display-name>
  <context-param>
    <javaee:param-name>mainCSSPath</javaee:param-name>
    <javaee:param-value>/memoriavirtual/css/main.css</javaee:param-value>
  </context-param>
  <context-param>
    <javaee:param-name>CSSPath</javaee:param-name>
    <javaee:param-value>/memoriavirtual/css</javaee:param-value>
  </context-param>
  <context-param>
    <javaee:param-name>appPath</javaee:param-name>
    <javaee:param-value>/memoriavirtual</javaee:param-value>
  </context-param>
  <context-param>
    <javaee:param-name>favoriteIcon</javaee:param-name>
    <javaee:param-value>/memoriavirtual/images/favicon.ico</javaee:param-value>
  </context-param>
  <context-param>
    <javaee:param-name>applicationName</javaee:param-name>
    <javaee:param-value>Mem√≥ria Virtual</javaee:param-value>
  </context-param>
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SpringOpenEntityManagerInViewFilter</filter-name>
    <filter-class>
            org.springframework.orm.jpa.support.OpenEntityManagerInViewFilter
        </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SpringOpenEntityManagerInViewFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <javaee:listener-class>org.springframework.web.context.ContextLoaderListener</javaee:listener-class>
  </listener>
  <listener>
    <javaee:listener-class>ContextListener</javaee:listener-class>
  </listener>
  <listener>
    <javaee:listener-class>SessionListener</javaee:listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>