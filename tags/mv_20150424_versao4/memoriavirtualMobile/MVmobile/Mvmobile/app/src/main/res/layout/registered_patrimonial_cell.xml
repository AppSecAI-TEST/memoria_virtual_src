<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@drawable/big_card" >

  <!--  <com.android.volley.toolbox.NetworkImageView
        android:id="@id/registered_patrimonial_image"
        android:layout_width="125dp"
        android:layout_height="92dp"
        android:background="@color/gray"/>
    -->

    <ImageView
        android:id="@id/registered_patrimonial_image"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:background="@color/background_gray"
        />
    <LinearLayout
        android:id="@id/registered_patrimonial_content"
        android:orientation="vertical"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/registered_patrimonial_image"
        android:weightSum="1">

        <TextView
            android:id="@id/registered_patrimonial_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Título"
            android:textSize="17dp"
            android:layout_alignLeft="@id/registered_patrimonial_content"
            android:layout_alignStart="@id/registered_patrimonial_content" />

        <TextView
            android:id="@id/registered_patrimonial_author"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:layout_below="@+id/title_public_channels_cell"
            android:maxLines="2"
            android:layout_weight="1.15" />

    </LinearLayout>

</RelativeLayout>
